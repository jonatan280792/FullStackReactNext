{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS with ts-node",
        "runtimeArgs": [
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "args": ["src/main.ts"],
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "skipFiles": ["<node_internals>/**"],
        "envFile": "${workspaceFolder}/.env"
      }
    ]
  }
  